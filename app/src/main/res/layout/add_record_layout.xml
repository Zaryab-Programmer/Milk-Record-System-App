<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Milk Name"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:textColorHint="@color/colorAnalogous"
            app:hintTextColor="@color/colorAnalogous"
            app:startIconDrawable="@drawable/ic_list_text"
            app:startIconTint="@color/colorAnalogous"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:inputType="text"
                android:textColor="@color/colorAnalogous"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Kilogram"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:textColorHint="@color/colorAnalogous"
            app:hintTextColor="@color/colorAnalogous"
            app:startIconDrawable="@drawable/ic_baseline_line_weight_24"
            app:startIconTint="@color/colorAnalogous"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMeasure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:inputType="numberDecimal"
                android:textColor="@color/colorAnalogous"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Price"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:textColorHint="@color/colorAnalogous"
            app:hintTextColor="@color/colorAnalogous"
            app:startIconDrawable="@drawable/ic_baseline_payment_24"
            app:startIconTint="@color/colorAnalogous"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:inputType="number"
                android:textColor="@color/colorAnalogous"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>